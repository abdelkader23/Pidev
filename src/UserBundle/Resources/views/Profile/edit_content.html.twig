{% trans_default_domain 'FOSUserBundle' %}





<div class="container-fluid">
    <h1>Edite Profile</h1>


    <div class="row">
        <div class="col-sm-3" ></div>
        <div class="col-sm-6" style="background-color:lavenderblush;">



            <div id="listar-content" class="listar-content">
                {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'listar-formtheme listar-formaddlisting"' } }) }}

                    <fieldset>
                        <div class="listar-boxtitle">
                            <h3>My Profile</h3>
                        </div>
                        <div class="listar-dashboardmyprofile">
                            <figure class="listare-profilepic">
                                <img src="{{ asset('UserBundle/images/profile-pic.jpg') }}" alt="image description">
                                <figcaption><a class="listar-btnuploadimg" href="javascript:void(0);"><i
                                                class="icon-upload2"></i>Upload Images</a></figcaption>
                            </figure>
                            <div class="row">


                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <div class="form-group listar-dashboardfield">
                                    <label>Username</label>

                                        {{ form_widget(form.username, {'attr': {'class': 'form-control','placeholder':'Username'}}) }}

                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <div class="form-group listar-dashboardfield">
                                        <label>Email Address</label>
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Email Address'}}) }}
                                    </div>
                                </div>


                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <div class="form-group listar-dashboardfield">
                                        <label>phone </label>
                                        {{ form_widget(form.phone, {'attr': {'class': 'form-control','placeholder':'phone'}}) }}
                                    </div>
                                </div>


                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <div class="form-group listar-dashboardfield">
                                        <label>prenom </label>
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control','placeholder':'prenom '}}) }}
                                    </div>
                                </div>


                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

                                    <label>Role</label>
                                    <div class="form-group listar-dashboardfield">

                                        {{ form_widget(form.roles, {'attr': {'class': 'form-control','placeholder':'Role'}}) }}
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

                                    <label>Password</label>
                                    <div class="form-group listar-dashboardfield">

                                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control','placeholder':'Password'}}) }}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </fieldset>


                        <div class="listar-dashboardpassword">
                            <div class="row">


                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">



                                    <input class="listar-btn listar-btngreen" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                                </div>
                            </div>
                        </div>

                {{ form_end(form) }}
            </div>


            {{ form_end(form) }}



            </div>
        <div class="col-sm-3"></div>
    </div>
</div>

















